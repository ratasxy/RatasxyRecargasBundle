<h1>Pagos list</h1>

<table class="records_list">
    <thead>
        <tr>
            <th>Id</th>
            <th>Monto</th>
            <th>Tipo</th>
            <th>Codigo</th>
            <th>Estado</th>
            <th>Fecha</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('pagos_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.monto }}</td>
            <td>{{ entity.tipo }}</td>
            <td>{{ entity.codigo }}</td>
            <td>{{ entity.estado }}</td>
            <td>{{ entity.fecha|date('Y-m-d H:i:s') }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('pagos_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('pagos_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('pagos_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
